{
  "name": "bestiary-ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -C playground dev",

    "pack:libs": "pnpm exec tsx scripts/pack.ts",

    "build": "tsx scripts/build.ts",
    "build:components": "tsx scripts/build.ts --components",
    "build:utils": "tsx scripts/build.ts --utils",
    "build:style": "tsx scripts/build.ts --style",
    "build:icons": "tsx scripts/build.ts --icons",

    "change": "changeset",
    "version-pack": "changeset version",
    "release:all": "pnpm build && changeset publish",
    "release:utils": "pnpm build --utils && npm publish packages/bestiary-ui/utils --access public",
    "release:style": "pnpm build --style && npm publish packages/bestiary-ui/style --access public",
    "release:icons": "pnpm build --icons && npm publish packages/bestiary-ui/icons --access public",
    "release:components": "pnpm build --components && npm publish packages/bestiary-ui/components --access public",

    "typecheck": "vue-tsc --noEmit -p tsconfig.base.json --composite false"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "esbuild": "^0.27.2",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.4.0",
    "vue-tsc": "^2.0.0"
  }
}