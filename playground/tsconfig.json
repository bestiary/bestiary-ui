{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@bestiary-ui/components/*": [
                "../packages/components/src/*"
            ],
            "@bestiary-ui/components": [
                "../packages/components/src/index"
            ],
            "@bestiary-ui/utils": [
                "../packages/utils/src/index"
            ],
            "@bestiary-ui/style": [
                "../packages/style/src/index.css"
            ],
            "@bestiary-ui/icons/*": [
                "../packages/icons/generated/*"
            ],
            "@bestiary-ui/icons": [
                "../packages/icons/generated/index"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue"
    ]
}